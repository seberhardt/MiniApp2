<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/diet_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"></Spinner>
    <Spinner
        android:id="@+id/servings_spinner"
        android:layout_below="@+id/diet_spinner"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"></Spinner>
   <Spinner
       android:id="@+id/time_spinner"
       android:layout_below="@+id/servings_spinner"
       android:layout_width="match_parent"
       android:layout_marginTop="50dp"
       android:layout_height="wrap_content"></Spinner>
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_spinner"
        android:layout_marginTop="50dp"
        android:layout_marginStart="70dp"
        android:text="submit"/>

</RelativeLayout>
